{
    "env": {
        "node": true,
        "mocha": true
    },
    "rules": {
        "max-len": [
            "error",
            {
                "code": 110,
                "comments": 100,
                "ignoreTemplateLiterals": true
            }
        ],
        "no-unused-vars": 0,
        "radix": 0,
        "space-before-function-paren": 0,
        "indent": ["error", 4, { "SwitchCase": 1 }]
    },
    "globals": {
        "describe": false,
        "env": false,
        "Cypress": false,
        "cy": false
    },
    "extends": "strongloop",
    "parserOptions": {
        "ecmaVersion": 6
    }
}
